---
// Props configurables
export interface Props {
  text?: string;
  icon?: boolean;
  customClass?: string;
}

const { text = "Volver atrás", icon = true, customClass = "" } = Astro.props;
---

<a 
  href="javascript:history.back()" 
  class={`back-link ${customClass}`}
  aria-label="Volver a la página anterior"
>
  {icon && (
    <svg class="back-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
  )}
  {text}
</a>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    padding: 5px;
    margin: 5px;
    border-radius: .3rem;
    border:1px solid white;
  }
  
  .back-link:hover {
    background-color: rgb(48, 47, 47);
  }
  
  .back-icon {
    transition: transform 0.2s ease;
  }
  
  .back-link:hover .back-icon {
    transform: translateX(-2px);
  }
</style>