<div id="bcv" class="rate-card">
    <div class="card-header">
    <h3 class="card-title">Tasa bcv</h3>
    <span class="change-indicator-up">0.0%</span>
    </div>
    <p class="rate-value">0.0 Bs/$</p>
    <button data-tasa="bcv" class="use-rate-button secondary-button">Usar esta tasa</button>
</div>
<div id="promedio" class="rate-card">
    <div class="card-header">
    <h3 class="card-title">Tasa promedio</h3>
    <span class="change-indicator-up">0.0%</span>
    </div>
    <p class="rate-value">0.0 Bs/$</p>
    <button data-tasa="promedio" class="use-rate-button primary-button">Usar esta tasa</button>
</div>
<div id="paralelo" class="rate-card">
    <div class="card-header">
    <h3 class="card-title">Tasa paralelo</h3>
    <span class="change-indicator-up">0.0%</span>
    </div>
    <p class="rate-value">0.0 Bs/$</p>
    <button data-tasa="paralelo" class="use-rate-button secondary-button">Usar esta tasa</button>
</div>
<script>

      
  document.addEventListener("DOMContentLoaded",()=>{
    
    const botones = document.getElementsByClassName("use-rate-button")
    if(botones && botones.length > 0){
        addlisteners(botones)
    }
  })

  function addlisteners(botones) {
    for (const boton of botones) {
        boton.addEventListener("click", () => {
          
            // Remover 'primary-button' de TODOS los botones primero

            for(const btn of botones){
              btn.classList.remove("primary-button");
            }
            
            // Aplicar clases al bot√≥n clickeado
            boton.classList.add("primary-button");
            boton.classList.remove("secondary-button");
            if(window.SharedWorker && window.sw){
              // Enviar un mensaje al window.sharedWorker
              window.sw.port.postMessage({
                setTasa: boton.getAttribute("data-tasa")
              });

            }
        });
    }
        
  }
</script>
<style>
    
    .rate-card {
    border-radius: 0.5rem;
    box-shadow: 0 1px 2px 0 var(--color-borders);
    padding: 1rem;
