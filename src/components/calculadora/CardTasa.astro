  }

  .card-title {
    font-weight: 500;
    opacity: 0.8;
  }

  .change-indicator-up {
    color: var(--success);
  }

  .change-indicator-down {
    color: var(--danger);
  }

  .rate-value {
    font-size: 1.5rem;
